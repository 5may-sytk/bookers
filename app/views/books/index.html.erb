<h1>Books</h1>

<div>
  <%= flash[:notice] %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"> </th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <span><%= book.title %></span>
          <span><%= book.body %></span>
          <span><%= link_to "show", "/books/#{book.id}" %></span>
          <span><%= link_to "edit", edit_book_path(book.id) %><span>
          <span>
            <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Aer you sure?" %>
          <span>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>


<h2>New book</h2>

<div id="error box">
  <% if @book.present? && @book.errors.any? %>
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: Book do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
	
  <div class="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>