<h1>Books</h1>
<table>
  <p>Title</p>
  <% @books.each do |book| %>
    <span><%= book.title %></span>
  <% end %>

  <p>Body</p>
  <% @books.each do |book| %>
    <span><%= book.body %></span>
  <% end %>
</table>


<h2>New book</h2>
<%= form_with model: Book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>